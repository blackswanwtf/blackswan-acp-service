# BlackSwan ACP Service Configuration
# Copy this file to .env and fill in your actual values

# =================================
# SERVICE CONFIGURATION
# =================================
NODE_ENV=production
PORT=3002
SERVICE_NAME=blackswan-acp-service
LOG_LEVEL=info

# =================================
# ACP AGENT CONFIGURATION
# =================================
# Your whitelisted wallet private key (hex format, starts with 0x)
WHITELISTED_WALLET_PRIVATE_KEY=0x...

# Your seller agent wallet address
SELLER_AGENT_WALLET_ADDRESS=0x...

# Your seller entity ID from ACP registration
SELLER_ENTITY_ID=...

# =================================
# ANALYSIS API CONFIGURATION
# =================================
# VouAI Platform API base URL
VOUAI_API_URL=http://localhost:3001

# API request timeout (milliseconds)
API_TIMEOUT=10000

# =================================
# SERVICE SETTINGS
# =================================
# Maximum concurrent jobs the service can handle
MAX_CONCURRENT_JOBS=100

# Job processing timeout (milliseconds)
JOB_TIMEOUT=30000

# Rate limiting (requests per minute per IP)
RATE_LIMIT_PER_MINUTE=60

# =================================
# MONITORING & HEALTH
# =================================
# Enable metrics endpoint (/metrics)
ENABLE_METRICS=true

# Enable health check endpoint (/health)
ENABLE_HEALTH_CHECK=true

# =================================
# SECURITY
# =================================
# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# API key for protected endpoints (optional)
API_KEY=

# =================================
# LOGGING
# =================================
# Log file directory
LOG_DIR=./logs

# Maximum log file size
LOG_MAX_SIZE=20m

# Maximum number of log files
LOG_MAX_FILES=14d
